        <div>
          <% events.map((event) => { %>
            <h3><%= event.summary %></h3>
            <strong class="red">
              <%= new Date(Date.parse(event.start.dateTime)).toLocaleString('en-us', {
                weekday: 'long',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                timeZone: 'America/New_York',
              }); %>
            </strong>
            <br/>
            <sub>
              <a href="https://maps.google.com/maps?q=<%= encodeURIComponent(event.location) %>">
                <%= event.location %>
              </a>
            </sub>
            <p><%= event.description %></p>
            <!-- <%= JSON.stringify(event) %> -->
          <% }); %>
        </div>

        <hr/>

        <div>
          <span>
            <a href="/calendar">
              Subscribe to our Calendar
            </a>
            <a style="float: right;" href="https://goo.gl/forms/wQ7Q2hqSepNouXBp2">
              Propose a Learning Club Event
            </a>
          </span>
        </div>


<!DOCTYPE html>
<html lang="en">
  <%- include head.ejs %>

  <body>
    <div class="main-wrapper">

      <%- include header.ejs %>

      <main class="container">
        <h1>Boston Tech Workers Coalition</h1>

        <!-- Next Event Flyer -->
        <!--
        <div class="flyer">
          <a href="https://s3.amazonaws.com/boston.techworkerscoalition.org/website/assets/event-2019-02-24.png">
            <img alt="TWC event" src="https://s3.amazonaws.com/boston.techworkerscoalition.org/website/assets/event-2019-02-24.png"/>
          </a>
        </div>
        -->

        <!-- Events -->
        <div class="events">
          <% events.map((event) => { %>
            <h3><%= event.summary %></h3>
            <strong class="red">
              <%= new Date(Date.parse(event.start.dateTime)).toLocaleString('en-us', {
                weekday: 'long',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                timeZone: 'America/New_York',
              }); %>
            </strong>
            <br/>
            <sub>
              <a href="https://maps.google.com/maps?q=<%= encodeURIComponent(event.location) %>">
                <%= event.location %>
              </a>
            </sub>
            <% (event.description || '').split(/\n\n/).map(p => { %>
              <p><%- p %></p>
            <% }); %>
            <br/>
          <% }); %>
        </div>

        <!-- Events Footer -->
        <div class="events-footer">
          <hr/>
          <div class="columns">
            <div class="column is-1">
              <a href="/calendar">
                Subscribe to our Calendar
              </a>
            </div>
            <div class="column is-1">
              <a style="float: right;" href="https://goo.gl/forms/wQ7Q2hqSepNouXBp2">
                Propose a Learning Club Event
              </a>
            </div>
          </div>
        </div>

      </main>
    </div>

    <%- include footer.ejs %>

  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <%- include head.ejs %>

  <body>
    <%- include header.ejs %>

    <main class="contain">
      <h1 class="lh-tight marg-b-3">
        <span class="red">Boston</span> Tech Workers Coalition
      </h1>

      <h2 class="grey marg-b-4">
        Guided by our vision for an inclusive &amp; equitable tech industry, TWC
        organizes to build worker power through rank &amp; file
        self-organization and education.
      </h2>

      <!-- Next Event Flyer
      <div class="flyer">
        <a href="assets/event-2019-07-24.png">
          <img alt="TWC event" src="assets/event-2019-07-24.png"/>
        </a>
      </div>
      -->

      <!-- Events -->
      <div class="events">
        <% events.map((event) => { %>
        <h3><%= event.summary %></h3>
        <strong class="red">
          <%= new Date(Date.parse(event.start.dateTime)).toLocaleString('en-us',
          { weekday: 'long', month: 'long', day: 'numeric', hour: '2-digit',
          minute: '2-digit', timeZone: 'America/New_York', }); %>
        </strong>
        <br />
        <sub>
          <a
            href="https://maps.google.com/maps?q=<%= encodeURIComponent(event.location) %>"
          >
            <%= event.location %>
          </a>
        </sub>
        <% (event.description || '').split(/\n\n/).map(p => { %>
        <p><%- p %></p>
        <% }); %>
        <br />
        <% }); %>
      </div>

      <!-- Events Footer -->
      <div class="events-footer">
        <hr />
        <div class="columns">
          <div class="column is-1">
            <a href="/calendar"> Subscribe to our Calendar </a>
          </div>
          <div class="column is-1">
            <a
              style="float: right"
              href="https://goo.gl/forms/wQ7Q2hqSepNouXBp2"
            >
              Propose a Learning Club Event
            </a>
          </div>
        </div>
      </div>
    </main>

    <%- include footer.ejs %>
  </body>
</html>
